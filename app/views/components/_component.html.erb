<section id="<%= dom_id component %>" class="container py-3 component">
  <div class="row px-3">
    <div class="col-lg-9 info">
      <div class="row">
        <p>
          <strong>Name:</strong> <%= component.name %> (<%= component.kind.humanize %>) - 
          <strong>Port:</strong>
          <%= component.port %>
        </p>

        <p>

        </p>

        <% if component.kind == "actuator" %>
          <p>
            <strong>Min value:</strong> <%= component.min_value %> |
            <strong>Max value:</strong> <%= component.max_value %>
          </p>
        <% else %>
          <p>
            <strong>Last reading:</strong> <%= component.readings.last.value %>
          </p>
        <% end %>
      </div>
    </div>
    <div class="col-lg-3 actions">
      <div class="d-flex justify-content-center">
        <%= link_to "Edit", edit_component_path(component), class: "btn btn-primary mx-1" %> 
        <%= button_to "Destroy", component, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</section>