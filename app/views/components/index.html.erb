<section class="container" id="components-index">
  <div class="row p-5">
    <div class="col">
      <div class="page-title mb-3">
        <h1>Components</h1>
        <%= link_to "New component", new_component_path, class: "btn btn-success" %>
      </div>

      <div id="components">
        <% @components.each do |component| %>
          <%= render component %>
          <p>
            <%= link_to "Show", component, class: "btn btn-primary" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>